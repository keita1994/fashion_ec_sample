  / カートにアイテムがある時
  .cart-main__middle.clearfix
    %table.cart-main__middle__left
      %tr.cart-main__middle__left__item-space
        %td.cart-main__middle__left__item-space-image
          = image_tag "https://c.imgz.jp/970/24834970/24834970B_160_D_125.jpg", class: "in-cart-item-image"
        %td.cart-main__middle__left__item-space-detail
          %p.in-cart-item-p ショップ名
          %p.in-cart-item-p ブランド名
          %p.in-cart-item-p 親カテゴリー/子カテゴリー
          %p.in-cart-item-p カラー
          %p.in-cart-item-p サイズ
          %p.in-cart-item-p-no-retutn 返品交換対象外
        %td.cart-main__middle__left__item-space-price ¥10,000
        %td.cart-main__middle__left__item-space-count-item
          .cart-main__middle__left__item-space-count-item__box.clearfix
            .cart-main__middle__left__item-space-count-item__box-number 1
            %button{class: "cart-main__middle__left__item-space-count-item__box-btn"} +
        %td.cart-main__middle__left__item-space-delete-btn
          = link_to "消去"

      %tr.cart-main__middle__left__item-space
        %td.cart-main__middle__left__item-space-image
          = image_tag "https://c.imgz.jp/970/24834970/24834970B_160_D_125.jpg", class: "in-cart-item-image"
        %td.cart-main__middle__left__item-space-detail
          %p.in-cart-item-p ショップ名
          %p.in-cart-item-p ブランド名
          %p.in-cart-item-p 親カテゴリー/子カテゴリー
          %p.in-cart-item-p カラー
          %p.in-cart-item-p サイズ
          %p.in-cart-item-p-no-retutn 返品交換対象外
        %td.cart-main__middle__left__item-space-price ¥10,000
        %td.cart-main__middle__left__item-space-count-item
          .cart-main__middle__left__item-space-count-item__box.clearfix
            .cart-main__middle__left__item-space-count-item__box-number 1
            %button{class: "cart-main__middle__left__item-space-count-item__box-btn"} +
        %td.cart-main__middle__left__item-space-delete-btn
          = link_to "消去"

    .cart-main__middle__right
      %span.cart-main__middle__right__zozo ZOZO
      %span.cart-main__middle__right__facebook facebook
      .cart-main__middle__right__box
        .cart-main__middle__right__box-msg ログインしてレジに進む
        %input{type: "text", placeholder: "メールアドレスまたはZOZOID", class: "cart-main__middle__right__box-input"}
        %input{type: "text", placeholder: "パスワード", class: "cart-main__middle__right__box-input"}
        = link_to "ID・パスワードを忘れた方パスワードを忘れた方" do
          .forget-email-box ID・パスワードを忘れた方
        %button{class: "cart-main__middle__right__box-arigato-transaction-btn"}
          %p.arigato-price-msg ARIGATO価格
          %p.confirm-arigato-price ¥4,000で購入する
        .cart-main__middle__right__box-only-creditcard-msg お支払いはクレジットカードのみとなります。
        %p.cart-main__middle__right__box-zozoarigato-info-up ※ZOZOARIGATO価格での購入にはZOZOARIGATO
        %p.cart-main__middle__right__box-zozoarigato-info-bottom
          %span メンバー入会（有料）が必要になります。
          %span.cart-main__middle__right__box-zozoarigato-detail 
            = link_to "詳細"

      .cart-main__middle__right__footer
        .cart-main__middle__right__footer__usual
          %button{class: "cart-main__middle__right__footer__usual-price-box"} 
            %span 通常価格
            %span ¥4,000
            %span 通常価格
            %span 
              = fa_icon "angle-down", class: "usual-price-arrow"
          .cart-main__middle__right__footer__usual-continue-shopping
            = link_to "ショッピングを続ける", root_path

        .cart-main__middle__right__footer__open
          .cart-main__middle__right__footer__open-confirm-price
            %span 通常価格
            %span ¥3,046
            %span で購入する
          %button#show-register{class: "cart-main__middle__right__footer__open-next-to-register"} レジ進むへ
          .cart-main__middle__right__footer__open-wrapping.clearfix
            %input{type: :checkbox, class: "cart-main__middle__right__footer__open-wrapping-checkbox"}
            .cart-main__middle__right__footer__open-wrapping-middle
              %span ラッピングをご希望の方はこちらにチェックをしてください
              %span.wrapping-detail-msg (有料)
              %span
                = link_to "詳細"
            .cart-main__middle__right__footer__open-wrapping-right
              = image_tag "https://img4.zozo.jp/giftwrapping/pc/cart_giftgray.png", class: "wrapping-image"
          .cart-main__middle__right__footer__open-continue-shopping
            = link_to "ショッピングを続ける", root_path



