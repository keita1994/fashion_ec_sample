          .cart-main__middle__left__item-space-count-item__box.clearfix
            .cart-main__middle__left__item-space-count-item__box-number 1
            %button{class: "cart-main__middle__left__item-space-count-item__box-btn"} +
        %td.cart-main__middle__left__item-space-delete-btn
          = link_to "消去"
      %tr.cart-main__middle__left__item-space
        %td.cart-main__middle__left__item-space-image
          = image_tag "https://c.imgz.jp/970/24834970/24834970B_160_D_125.jpg", class: "in-cart-item-image"
