  / カートにアイテムがある時
  .cart-main__middle.clearfix
    %table.cart-main__middle__left
      %tr.cart-main__middle__left__item-space
        %td.cart-main__middle__left__item-space-image
          = image_tag "https://c.imgz.jp/970/24834970/24834970B_160_D_125.jpg", class: "in-cart-item-image"
        %td.cart-main__middle__left__item-space-detail
          %p.in-cart-item-p ショップ名
          %p.in-cart-item-p ブランド名
          %p.in-cart-item-p 親カテゴリー/子カテゴリー
          %p.in-cart-item-p カラー
          %p.in-cart-item-p サイズ
          %p.in-cart-item-p-no-retutn 返品交換対象外
        %td.cart-main__middle__left__item-space-price ¥10,000
