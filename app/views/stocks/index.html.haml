#stockIndexBody
  .headerContent
    .inner.clearfix
      .txt
        %h1 商品在庫の一覧
      .searchItem.clearfix
        %p.keyword
          %input{type: "serch", placeholder: "出品アイテムをここに", class: "stockKeyword"}
        %p.submit
          %button.stockSubmit
            = fa_icon 'search'
  .mainContent
    #stockInfo
      #addStock
        %button.addBtn
          %a 追加
      #tblStockInfo
        %table
          %thead
            %tr
              %th アイテム名
              %th.brandCell ブランド
              %th.sizeCell サイズ
              %th.colorCell カラー
              %th.countCell 個数
              %th.iconCell イメージ
              %th.iconCell 編集
              %th.iconCell 削除
          %tbody
            - @items.each do |item|
              - item.stocks.each do |stock|
                %tr.specDetail
                  %th.itemName
                    = item.name
                  %td
                    = item.brand.name
                  %td
                    = stock.size.size
                  %td
                    = stock.color.name
                  %td
                    = stock.count
                  %td.iconBtn.iconIMG
                    = fa_icon("image")
                    = image_tag("#{stock.image}")
                  %td.iconBtn.iconEdit
                    = link_to edit_stock_path(stock), remote: true do
                      = fa_icon("edit")
                  %td.iconBtn
                    = link_to stock_path(stock), method: :delete do
                      = fa_icon("trash")

.AddStack-overlay.modal-overlay.modal-overlay-fixed
  .modal-outer
    .modal-inner
      .modal-iframe
        #detail
          %h2 在庫情報の登録
          .AddStackForm
            = form_for @stock do |f|
              .form-group
                %label.mainLabel アイテム名
                %span.form-require 必須
                .radioBox.clearfix
                  - @items.each do |item|
                    .radioSelect
                      = f.radio_button :item_id, "#{item.id}"
                      = f.label :item_id, "#{item.name}", value: "#{item.id}"

              .form-group
                %label.mainLabel サイズ
                %span.form-require 必須
                %br.clearBoth
                .selectBox
                  = f.select :size_id , Size.all.map{|size|[size.size, size.id]}



              .form-group
                %label.mainLabel カラー
                %span.form-require 必須
                %br.clearBoth
                .selectBox
                  = f.select :color_id, Color.all.map{|color|[color.name, color.id]}


              .form-group
                %label.mainLabel 個数
                %span.form-require 必須
                .clearBoth
                = f.number_field :count, class: "input-default", min: "0"

              .form-group
                %label.mainLabel イメージ
                %span.form-require.BKgray 任意
                .clearBoth
                .ImgPreview
                = f.file_field :image

              = f.submit "登録する", class: "submitBtn"
      .modal-item.modal-close
        %i.fa.fa-times

.imagePreview-overlay.modal-overlay.modal-overlay-fixed
  .modal-outer
    .modal-inner
