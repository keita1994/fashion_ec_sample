#stockIndexBody
  .headerContent
    .inner.clearfix
      .txt
        %h1 zozotown 商品在庫の一覧
      .searchItem.clearfix
        %p.keyword
          %input{type: "serch", placeholder: "出品アイテムをここに", class: "stockKeyword"}
        %p.submit
          %button.stockSubmit
            = fa_icon 'search'
      .shopName
        %h2 #{@shop.name} 様
  .mainContent
    #stockInfo
      #addStock

        = link_to new_stock_path, remote: true do
          %button.addBtn 追加
      #tblStockInfo
        %table.table-sortable
          %thead
            %tr
              %th アイテム名
              %th.brandCell ブランド
              %th.sizeCell サイズ
              %th.colorCell カラー
              %th.countCell 個数
              %th.iconCell イメージ
              %th.iconCell 編集
              %th.iconCell 削除
          %tbody
            - @stocks.each do |stock|
              %tr.specDetail.item{data: { model_name: "#{stock.class.name.underscore}", update_url: stock_sort_path(stock) }}
                %th.itemName
                  = stock.item.name
                %td.itemBrand
                  = stock.item.brand.name
                %td.stockSize
                  = stock.size.size
                %td.stockColor
                  = stock.color.name
                %td.stockCount
                  = stock.count
                %td.iconBtn.iconIMG
                  = fa_icon("image")
                  = image_tag("#{stock.image}")
                %td.iconBtn.iconEdit
                  = link_to edit_stock_path(stock), remote: true do
                    = fa_icon("edit")
                %td.iconBtn.iconDelete
                  = link_to stock_path(stock), method: :delete do
                    = fa_icon("trash")



.imagePreview-overlay.modal-overlay.modal-overlay-fixed
  .modal-outer
    .modal-inner
      .image-iframe
        .stockDetailPix
          = image_tag("")
        .noImage
          = image_tag("http://lib.city.koshigaya.saitama.jp/wp-content/uploads/2015/08/noimage_300-207x300.png")

        .modal-item.modal-close.image-close
          %i.fa.fa-times

