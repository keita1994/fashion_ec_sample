#stockIndexBody
  .headerContent
    .inner.clearfix
      .txt
        %h1 商品在庫の一覧
      .searchItem.clearfix
        %p.keyword
          %input{type: "serch", placeholder: "出品アイテムをここに", class: "stockKeyword"}
        %p.submit
          %button.stockSubmit
            = fa_icon 'search'
  .mainContent
    #stockInfo
      #addStock
        %button.addBtn
          %a 追加
      #tblStockInfo
        %table
          %thead
            %tr
              %th アイテム名
              %th.brandCell ブランド
              %th.sizeCell サイズ
              %th.colorCell カラー
              %th.countCell 個数
              %th.iconCell 編集
              %th.iconCell 削除
          %tbody
            %tr.specDetail
              %th.itemName アイテムA
              %td GOUCH
              %td S
              %td ワインレッド
              %td 100
              %td.iconBtn.iconEdit
                %a
                = fa_icon("edit")
              %td.iconBtn
                %a
                = fa_icon("trash")
            %tr.specDetail
              %th.itemName アイテムB
              %td ETRO
              %td M
              %td モスキーグリーン
              %td 20
              %td.iconBtn.iconEdit
                %a
                = fa_icon("edit")
              %td.iconBtn
                %a
                = fa_icon("trash")
            %tr.specDetail
              %th.itemName アイテムC
              %td New Yorker
              %td L
              %td ブラック
              %td 30
              %td.iconBtn.iconEdit
                %a
                  = fa_icon("edit")
              %td.iconBtn
                %a
                  = fa_icon("trash")
            %tr.specDetail
              %th.itemName アイテムE
              %td SHANEL
              %td XL
              %td シャンパンゴールド
              %td 10
              %td.iconBtn.iconEdit
                %a
                  = fa_icon("edit")
              %td.iconBtn
                %a.iconBtn
                  = fa_icon("trash")

.AddStack-overlay.AddStack-overlay-fixed
  .AddStack-outer
    .AddStack-inner
      .AddStack-iframe
        #detail
          %h2 在庫情報の登録
          %form.AddStackForm
            .form-group
              %label.mainLabel アイテム名
              %span.form-require 必須
              .radioBox.clearfix
                .radioSelect
                  %input{type:"radio"}
                  %label アイテム１
                .radioSelect
                  %input{type:"radio"}
                  %label アイテム２
                .radioSelect
                  %input{type:"radio"}
                  %label アイテム３
                .radioSelect
                  %input{type:"radio"}
                  %label アイテム4
                .radioSelect
                  %input{type:"radio"}
                  %label アイテム5
                .radioSelect
                  %input{type:"radio"}
                  %label アイテム6

            .form-group
              %label.mainLabel サイズ
              %span.form-require 必須
              %br.clearBoth
              .selectBox
                %select
                  %option ---
                  %option XS
                  %option S
                  %option M
                  %option L
                  %option XL
                  %option XXL


            .form-group
              %label.mainLabel カラー
              %span.form-require 必須
              %br.clearBoth
              .selectBox
                %select
                  %option ---
                  %option ブラック
                  %option ホワイト
                  %option グレー
                  %option レッド
                  %option ネイビー
                  %option グリーン

            .form-group
              %label.mainLabel 個数
              %span.form-require 必須
              .clearBoth
              %input{type:"number", class: "input-default", min: "0"}

            %button{type:"submit",class: "submitBtn"}
              登録する
      .AddStack-item.AddStack-close
        %i.fa.fa-times

